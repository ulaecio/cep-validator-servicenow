        <name>Buscar cep</name>
        <onclick/>
        <order>100</order>
        <script><![CDATA[function onAction() {
    var cep = current.cep;
    if (!cep) {
        gs.addErrorMessage('Por favor, preencha o campo CEP.');
        return;
    }
    
    // Consome API externa para buscar o endereço pelo CEP
    var client = new sn_ws.RESTMessageV2();
    client.setEndpoint('https://viacep.com.br/ws/' + cep + '/json/');
    client.setHttpMethod('GET');

    var response = client.execute();
    var responseBody = response.getBody();
    var addressData = JSON.parse(responseBody);

    if (addressData.erro) {
        gs.addErrorMessage('CEP inválido.');
    } else {
        current.logradouro = addressData.logradouro;
        current.bairro = addressData.bairro;
        current.cidade = addressData.localidade;
        current.uf = addressData.uf;
        current.update();
        gs.addInfoMessage('Endereço preenchido com sucesso.');
    }
}
]]></script>
